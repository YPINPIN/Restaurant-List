<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <form action='/restaurants/search' id="searchForm">
        <h4 class='mb-2'>尋找餐廳：</h4>
        <div class='row'>
          <div class='input-group col-12 col-sm mb-1'>
            <input
              type='text'
              name='keyword'
              class='form-control'
              placeholder='輸入餐廳、分類'
              aria-label='Restaurant Name...'
              value='{{keyword}}'
              aria-describedby='search-button'
            />
            <div class='input-group-append'>
              <button class='btn btn-major' type='submit' id='search-button'><i
                  class='fas fa-search'
                ></i></button>
            </div>
          </div>
          <div class='input-group col-12 col-sm mb-1'>
            <div class='input-group-prepend'>
              <label
                class='input-group-text text-major'
                for='sortBy'
              >排序<i class='fas fa-sort ml-1'></i></label>
            </div>
            <select
              class='custom-select'
              id='sortBy'
              name='sortBy'
            >
              {{#each sortData}}
                <option value='{{this.value}}' {{#if (isEqual ../sortBy this.value)}} selected {{/if}}>{{this.title}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
  {{{searchTip}}}
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='card-columns'>
        {{#each restaurants}}
          <div class='mb-3 card position-relative'>
            <a href='/restaurants/{{this._id}}' class='text-secondary'>
              <img
                class='card-img-top'
                src='{{this.image}}'
                alt='{{this.name}}'
              />
              <div
                class='card-body p-3'
                data-toggle='tooltip'
                data-placement='top'
                title='{{this.description}}'
              >
                <h6 class='card-title mb-1'>{{this.name}}</h6>

                <div class='restaurant-category mb-1'>
                  <i class='fas fa-utensils pr-2'></i>
                  {{this.category}}
                </div>

                <span class='badge badge-pill badge-danger font-weight-normal'>
                  {{this.rating}}
                  <i class='fas fa-star fa-xs'></i>
                </span>
              </div>

            </a>
            <div class='btn-restaurant-group position-absolute'>
              <div class='btn-group dropup' role='group'>
                <button
                  id='btn-restaurant-dropdown'
                  type='button'
                  class='btn btn-info dropdown-toggle'
                  data-toggle='dropdown'
                  aria-haspopup='true'
                  aria-expanded='false'
                >
                  <i class='fas fa-edit'></i>
                </button>
                <div
                  class='dropdown-menu dropdown-menu-right'
                  aria-labelledby='btn-restaurant-dropdown'
                >
                  <a
                    class='dropdown-item text-secondary text-center'
                    href='/restaurants/{{this._id}}/edit'
                  >Edit</a>
                  <a
                    class='dropdown-item text-success text-center'
                    href='/restaurants/{{this._id}}'
                  >Detail</a>
                  <!-- Button trigger delete-modal -->
                  <button
                    type='button'
                    class='dropdown-item text-danger text-center'
                    data-toggle='modal'
                    data-target='#delete-modal-{{this._id}}'
                  >
                    Delete
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal -->
          <div
            class='modal fade'
            id='delete-modal-{{this._id}}'
            data-backdrop='static'
            data-keyboard='false'
            tabindex='-1'
            aria-labelledby='staticBackdropLabel'
            aria-hidden='true'
          >
            <div class='modal-dialog modal-sm modal-dialog-centered'>
              <div class='modal-content'>
                <div class='modal-header'>
                  <h5 class='modal-title' id='staticBackdropLabel'>提示訊息</h5>
                  <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                  >
                    <span aria-hidden='true'>&times;</span>
                  </button>
                </div>
                <div class='modal-body text-center'>
                  是否確定刪除此筆餐廳資料？
                </div>
                <div class='modal-footer'>
                  <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                  >取消</button>
                  <form
                    action='/restaurants/{{this._id}}?_method=DELETE'
                    method='POST'
                  >
                    <button
                      type='submit'
                      class='btn btn-danger'
                    >確定刪除</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <!-- btn new -->
  <a href='/restaurants/new' class='btn btn-info btn-lg btn-new'>
    <i class='fas fa-plus'></i>
  </a>
</div>

<script src="/javascripts/index.js"></script>